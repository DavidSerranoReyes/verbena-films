---
import MainLayout from '../layouts/MainLayout.astro';
import Navigation from '../components/Navigation/Navigation.astro';
import Footer from '../components/Footer/Footer.astro';
import { t } from '../utils/i18n';
---

<MainLayout 
  title="Nosotros | Verbena Films"
  description="Información sobre Verbena Films"
>
  <Navigation />
  
  <section class="about-section">
    <div class="container">
      <!-- Logo principal -->
      <div class="logo-container">
        <picture>
          <source srcset="/images/logo/Logo_films_negro.webp" type="image/webp" />
          <img src="/images/logo/Logo_films_negro.png" alt="Verbena Films" class="main-logo" />
        </picture>
      </div>

      <!-- Introducción -->
      <div class="about-block">
        <h2 class="block-title">
          <span class="lang-es">{t('about.intro.title', 'es')}</span>
          <span class="lang-en" style="display:none;">{t('about.intro.title', 'en')}</span>
        </h2>
        <p class="block-text">
          <span class="lang-es">{t('about.intro.text', 'es')}</span>
          <span class="lang-en" style="display:none;">{t('about.intro.text', 'en')}</span>
        </p>
      </div>

      <!-- Filosofía -->
      <div class="about-block">
        <h2 class="block-title">
          <span class="lang-es">{t('about.philosophy.title', 'es')}</span>
          <span class="lang-en" style="display:none;">{t('about.philosophy.title', 'en')}</span>
        </h2>
        <p class="block-text">
          <span class="lang-es">{t('about.philosophy.text', 'es')}</span>
          <span class="lang-en" style="display:none;">{t('about.philosophy.text', 'en')}</span>
        </p>
      </div>

      <!-- Equipo -->
      <div class="about-block team-block">
        <h2 class="block-title">
          <span class="lang-es">{t('about.team.title', 'es')}</span>
          <span class="lang-en" style="display:none;">{t('about.team.title', 'en')}</span>
        </h2>
        
        <div class="team-member">
          <h3 class="member-name">
            <span class="lang-es">{t('about.team.ana.name', 'es')}</span>
            <span class="lang-en" style="display:none;">{t('about.team.ana.name', 'en')}</span>
          </h3>
          <p class="member-role">
            <span class="lang-es">{t('about.team.ana.role', 'es')}</span>
            <span class="lang-en" style="display:none;">{t('about.team.ana.role', 'en')}</span>
          </p>
          <p class="member-description">
            <span class="lang-es">{t('about.team.ana.description', 'es')}</span>
            <span class="lang-en" style="display:none;">{t('about.team.ana.description', 'en')}</span>
          </p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</MainLayout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .about-section {
    padding: var(--spacing-2xl) 0;
    background: var(--color-dark-bg);
    margin-top: var(--spacing-2xl);
    min-height: calc(100vh - var(--spacing-2xl));
    animation: fadeInUp 0.8s ease-out;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  .main-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: var(--font-weight-thin);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-2xl);
    text-align: center;
    letter-spacing: 0.02em;
  }

  .about-block {
    margin-bottom: var(--spacing-2xl);
    padding-bottom: var(--spacing-2xl);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    animation: slideInRight 0.7s ease-out;
    transition: all var(--transition-default);
    padding: var(--spacing-lg);
    margin-left: calc(var(--spacing-lg) * -1);
    margin-right: calc(var(--spacing-lg) * -1);
    padding-left: var(--spacing-lg);
    padding-right: var(--spacing-lg);
    border-radius: 12px;
  }

  .about-block:hover {
    background: rgba(212, 165, 116, 0.05);
    border-left: 3px solid var(--color-accent);
    transform: translateX(12px);
    box-shadow: 0 8px 24px rgba(212, 165, 116, 0.1);
  }

  .about-block:last-child {
    border-bottom: none;
  }

  .block-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: var(--font-weight-regular);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-md);
    letter-spacing: 0.01em;
    transition: all var(--transition-default);
  }

  .about-block:hover .block-title {
    color: var(--color-accent);
    letter-spacing: 0.05em;
  }

  .block-text {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.8;
    max-width: 800px;
    transition: color var(--transition-default);
  }

  .about-block:hover .block-text {
    color: var(--color-text-primary);
  }

  .team-block {
    margin-top: var(--spacing-xl);
  }

  .team-member {
    background: rgba(255, 255, 255, 0.03);
    padding: var(--spacing-lg);
    border-radius: 8px;
    margin-top: var(--spacing-lg);
    border-left: 3px solid var(--color-accent, #d4af37);
    transition: all var(--transition-default);
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .team-member:nth-child(2) { animation-delay: 0.2s; }
  .team-member:nth-child(3) { animation-delay: 0.3s; }
  .team-member:nth-child(4) { animation-delay: 0.4s; }

  .team-member:hover {
    background: rgba(255, 255, 255, 0.08);
    transform: translateX(8px);
    box-shadow: 0 8px 24px rgba(212, 165, 116, 0.15);
  }

  .member-name {
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xs);
  }

  .member-role {
    font-size: 1rem;
    color: var(--color-accent, #d4af37);
    font-weight: var(--font-weight-regular);
    margin-bottom: var(--spacing-md);
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .member-description {
    font-size: 1rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  .logo-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: var(--spacing-xl);
    animation: fadeInUp 0.8s ease-out 0.1s backwards;
  }

  .main-logo {
    max-width: 500px;
    width: 100%;
    height: auto;
    object-fit: contain;
    filter: brightness(0) invert(1);
    transition: transform var(--transition-default);
  }

  .main-logo:hover {
    transform: scale(1.05);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .about-section {
      padding: var(--spacing-xl) 0;
    }

    .container {
      padding: 0 var(--spacing-md);
    }

    .main-title {
      margin-bottom: var(--spacing-xl);
    }

    .about-block {
      margin-bottom: var(--spacing-xl);
      padding-bottom: var(--spacing-xl);
    }

    .team-member {
      padding: var(--spacing-md);
    }

    .block-text,
    .member-description {
      font-size: 1rem;
    }
  }
</style>
