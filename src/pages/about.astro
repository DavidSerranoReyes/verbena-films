---
import MainLayout from '../layouts/MainLayout.astro';
import Navigation from '../components/Navigation/Navigation.astro';
import Footer from '../components/Footer/Footer.astro';
import { t } from '../utils/i18n';
---

<MainLayout 
  title="Nosotros | Verbena Films"
  description="Información sobre Verbena Films"
>
  <Navigation />
  
  <section class="about-section">
    <div class="container">
      <h1>
        <span class="lang-es">{t('nav.about', 'es')}</span>
        <span class="lang-en" style="display:none;">{t('nav.about', 'en')}</span>
      </h1>
      <p>
        <span class="lang-es">Nuestra Historia y Misión</span>
        <span class="lang-en" style="display:none;">Our Story and Mission</span>
      </p>
      <p>
        <span class="lang-es">Contenido en desarrollo...</span>
        <span class="lang-en" style="display:none;">Content in development...</span>
      </p>
    </div>
  </section>

  <Footer />
</MainLayout>

<style>
  .about-section {
    padding: var(--spacing-2xl) 0;
    background: var(--color-dark-bg);
    margin-top: var(--spacing-2xl);
    min-height: calc(100vh - var(--spacing-2xl));
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  h1 {
    font-size: 3rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-lg);
  }

  p {
    font-size: 1rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
</style>
