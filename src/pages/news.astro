---
import MainLayout from '../layouts/MainLayout.astro';
import Navigation from '../components/Navigation/Navigation.astro';
import Footer from '../components/Footer/Footer.astro';
import NewsGrid from '../components/News/NewsGrid.astro';
import { t } from '../utils/i18n';
import { news } from '../data/news';
---

<MainLayout 
  title="Noticias | Verbena Films"
  description="Últimas noticias de Verbena Films"
>
  <Navigation />
  
  <section class="news-section">
    <div class="container">
      <div class="header">
        <h1>
          <span class="lang-es">{t('nav.news', 'es')}</span>
          <span class="lang-en" style="display:none;">{t('nav.news', 'en')}</span>
        </h1>
        <p class="subtitle">
          <span class="lang-es">Últimas actualizaciones, premios y proyectos</span>
          <span class="lang-en" style="display:none;">Latest updates, awards and projects</span>
        </p>
      </div>

      <NewsGrid news={news} />
    </div>
  </section>

  <Footer />
</MainLayout>

<style>
  .news-section {
    padding: var(--spacing-2xl) 0;
    background: var(--color-dark-bg);
    margin-top: var(--spacing-2xl);
    min-height: auto;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  .header {
    margin-bottom: var(--spacing-3xl);
  }

  h1 {
    font-size: 3rem;
    font-weight: 400;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-md);
  }

  .subtitle {
    font-size: 1.1rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  /* Responsive */
  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .container {
      padding: 0 var(--spacing-md);
    }
  }
</style>
