---
/**
 * ðŸŽ¬ HERO COMPONENT
 * SecciÃ³n hero con carrusel de 3 videos (10 segundos cada uno)
 */
import { heroVideos } from '../../data/hero';
---

<section class="hero">
  <!-- Video Carousel Background -->
  <div class="hero-video-container">
    <video
      class="hero-video active"
      id="heroVideo1"
      autoplay
      muted
      loop={false}
      playsinline
      preload="auto"
    >
      <source src={heroVideos[0].src} type="video/mp4" />
    </video>
    <video
      class="hero-video"
      id="heroVideo2"
      muted
      loop={false}
      playsinline
      preload="metadata"
    >
      <source src={heroVideos[1].src} type="video/mp4" />
    </video>
    <video
      class="hero-video"
      id="heroVideo3"
      muted
      loop={false}
      playsinline
      preload="metadata"
    >
      <source src={heroVideos[2].src} type="video/mp4" />
    </video>
    <div class="hero-overlay"></div>
  </div>

  <!-- Content -->
  <div class="hero-content">
    <div class="container">
      <h1 class="hero-title"></h1>
      
      

      
    </div>
  </div>

    <!-- Video Info (moved outside hero-content so it's positioned relative to .hero) -->
    <div class="video-info" id="videoInfo">
      <h2 class="video-title" style="font-size: 1.5rem; font-weight: 400; color: #ffffff; margin-bottom: 0.5rem; letter-spacing: 1px; text-transform: uppercase; line-height: 1.2;">{heroVideos[0].title}</h2>
      <p class="video-meta" style="font-size: 0.95rem; color: #b0b0b0; letter-spacing: 0.5px; text-transform: uppercase; line-height: 1.4;">
        <span class="director">{heroVideos[0].director}</span>
        <span class="year">({heroVideos[0].year})</span>
      </p>
    </div>

  <!-- Volume Control -->
  <button class="volume-toggle" id="volumeToggle" aria-label="Toggle video volume" title="Activar/Desactivar sonido">
    <!-- Muted icon (simple speaker + x) -->
    <svg class="volume-icon volume-muted" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <!-- Speaker shape -->
      <polygon points="2,7 2,13 5,13 8,16 8,4 5,7" fill="white"/>
      <!-- X lines for muted -->
      <line x1="12" y1="6" x2="18" y2="12" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
      <line x1="18" y1="6" x2="12" y2="12" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
    </svg>
    <!-- Unmuted icon (simple speaker + waves) -->
    <svg class="volume-icon volume-unmuted" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" style="display: none;">
      <!-- Speaker shape -->
      <polygon points="2,7 2,13 5,13 8,16 8,4 5,7" fill="white"/>
      <!-- Wave lines for unmuted -->
      <path d="M11 8 Q12 9 12 10 Q12 11 11 12" stroke="white" stroke-width="1" fill="none" stroke-linecap="round"/>
      <path d="M14 6 Q16 8 16 10 Q16 12 14 14" stroke="white" stroke-width="1" fill="none" stroke-linecap="round"/>
    </svg>
  </button>

  <!-- Video Indicators -->
  <div class="hero-indicators">
    {
      heroVideos.map((_, index) => (
        <button
          class={`indicator ${index === 0 ? 'active' : ''}`}
          data-video-index={index}
          aria-label={`Video ${index + 1}`}
        />
      ))
    }
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-top: 0;
  }

  .hero-video-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
    background-color: #0f0f0f; /* Fondo oscuro mientras carga */

    &.active {
      opacity: 1;
    }
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(15, 15, 15, 0.7) 0%,
      rgba(15, 15, 15, 0.5) 50%,
      rgba(15, 15, 15, 0.7) 100%
    );
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    color: var(--color-text-primary);
    animation: fadeInUp 1s ease-out forwards;
    height: 100%;
  }

  .hero-title {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: var(--spacing-lg);

    @media (max-width: 768px) {
      margin-bottom: var(--spacing-md);
    }
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.5rem);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-2xl);
    font-weight: var(--font-weight-regular);
    letter-spacing: 1px;

    @media (max-width: 768px) {
      font-size: 1.1rem;
    }

    @media (max-width: 480px) {
      font-size: 0.95rem;
    }
  }

  .video-info {
    margin-bottom: 0;
    margin-top: 0;
    animation: fadeInUp 1s ease-out forwards;
    position: absolute;
    left: 0;
    right: 0;
    width: 100%;
    text-align: center;
    bottom: calc(var(--spacing-lg) + 8px);
    z-index: 4;

    @media (max-width: 768px) {
      bottom: calc(var(--spacing-md) + 6px);
    }

    @media (max-width: 480px) {
      bottom: calc(var(--spacing-md) + 4px);
    }
  }

  .video-info .video-title {
    font-size: 1.5rem;
    font-weight: 400;
    margin-bottom: 0.5rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: var(--color-text-primary);
    line-height: 1.2;

    @media (max-width: 768px) {
      font-size: 1.2rem;
    }

    @media (max-width: 480px) {
      font-size: 1rem;
    }
  }

  .video-meta {
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    letter-spacing: 0.5px;
    text-transform: uppercase;
    line-height: 1.4;

    @media (max-width: 768px) {
      font-size: 0.85rem;
    }

    @media (max-width: 480px) {
      font-size: 0.75rem;
    }
  }

  .director {
    margin-right: var(--spacing-sm);
  }


  .arrow {
    display: inline-block;
    transition: transform var(--transition-default);
  }

  .hero-indicators {
    position: absolute;
    bottom: var(--spacing-lg);
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    display: flex;
    gap: 0.5rem;

    @media (max-width: 768px) {
      bottom: var(--spacing-md);
      gap: 0.3rem;
    }
  }
  .indicator {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 6px;
    background: transparent;
    border: none;
    cursor: pointer;
    line-height: 0;
    appearance: none;
    -webkit-appearance: none;
    box-sizing: border-box;
    position: relative;
    min-width: 0;

    &::after {
      content: '';
      display: block;
      width: 6px;
      height: 6px;
      border-radius: 9999px;
      background: rgba(212, 168, 184, 0.35);
      transition: transform 0.22s ease, background-color 0.22s ease, box-shadow 0.22s ease, opacity 0.22s ease;
      box-shadow: none;
      opacity: 0.95;
    }

    &.active::after {
      background: var(--color-accent);
      transform: scale(1.45);
      box-shadow: 0 0 8px rgba(212, 168, 184, 0.45);
      opacity: 1;
    }

    @media (max-width: 768px) {
      padding: 5px;

      &::after {
        width: 4px;
        height: 4px;
      }
    }
  }

  .volume-toggle {
    position: absolute;
    bottom: var(--spacing-lg);
    right: var(--spacing-lg);
    z-index: 10;
    width: 48px;
    height: 48px;
    border: 1px solid rgba(212, 168, 184, 0.3);
    border-radius: 50%;
    background: rgba(15, 15, 15, 0.6);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-default);
    backdrop-filter: blur(10px);
    padding: 0;
    touch-action: manipulation;

    &:hover {
      border-color: var(--color-accent);
      background: rgba(15, 15, 15, 0.9);
      box-shadow: 0 0 20px rgba(212, 168, 184, 0.3);
    }

    @media (max-width: 768px) {
      width: 44px;
      height: 44px;
      bottom: var(--spacing-md);
      right: var(--spacing-md);
    }
  }

  .volume-icon {
    width: 22px;
    height: 22px;
    transition: all var(--transition-default);
    flex-shrink: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script define:vars={{ heroVideos }}>
  class HeroVideoCarousel {
    constructor() {
      this.videos = heroVideos;
      this.currentIndex = 0;
      this.video1 = document.getElementById('heroVideo1');
      this.video2 = document.getElementById('heroVideo2');
      this.video3 = document.getElementById('heroVideo3');
      this.videoInfoElement = document.getElementById('videoInfo');
      this.indicators = document.querySelectorAll('.indicator');
      this.isTransitioning = false;
      this.isPlaying = false;

      if (this.video1 && this.video2 && this.video3) {
        this.init();
      }
    }

    init() {
      // Video1 already has src from HTML, just ensure it's loaded
      this.video1.load();

      // Listen to video ended events - play next after completion
      this.video1.addEventListener('ended', () => {
        if (!this.isTransitioning) {
          this.nextVideo();
        }
      });

      this.video2.addEventListener('ended', () => {
        if (!this.isTransitioning) {
          this.nextVideo();
        }
      });

      this.video3.addEventListener('ended', () => {
        if (!this.isTransitioning) {
          this.nextVideo();
        }
      });

      // Indicators are visual only - no click interaction
      // (removed to avoid conflicts with video playback)

      // Start first video
      this.startPlayback();
    }

    startPlayback() {
      this.video1.classList.add('active');
      this.video1.play().catch(err => console.log('Play error:', err));
      this.isPlaying = true;
    }

    getActiveVideo() {
      if (this.video1.classList.contains('active')) return this.video1;
      if (this.video2.classList.contains('active')) return this.video2;
      return this.video3;
    }

    getInactiveVideo() {
      const active = this.getActiveVideo();
      if (active === this.video1) return this.video2;
      if (active === this.video2) return this.video3;
      return this.video1;
    }

    nextVideo() {
      if (this.isTransitioning) return;
      this.currentIndex = (this.currentIndex + 1) % this.videos.length;
      this.playVideo(this.currentIndex);
    }

    goToVideo(index) {
      if (this.isTransitioning) return;
      this.currentIndex = index;
      this.playVideo(index);
    }

    playVideo(index) {
      if (this.isTransitioning) return;
      this.isTransitioning = true;

      const video = this.videos[index];
      const activeVideo = this.getActiveVideo();
      const inactiveVideo = this.getInactiveVideo();

      // Update video info before transition
      if (this.videoInfoElement) {
        this.videoInfoElement.innerHTML = `
          <h2 class="video-title" style="font-size: 1.5rem; font-weight: 400; color: #ffffff; margin-bottom: 0.5rem; letter-spacing: 1px; text-transform: uppercase; line-height: 1.2;">${video.title}</h2>
          <p class="video-meta" style="font-size: 0.95rem; color: #b0b0b0; letter-spacing: 0.5px; text-transform: uppercase; line-height: 1.4;">
            <span class="director">${video.director}</span>
            <span class="year">(${video.year})</span>
          </p>
        `;
      }

      // Update indicators
      this.indicators.forEach((indicator, idx) => {
        if (idx === index) {
          indicator.classList.add('active');
        } else {
          indicator.classList.remove('active');
        }
      });

      // Preload and setup the new video
      inactiveVideo.src = video.src;
      inactiveVideo.load();
      inactiveVideo.currentTime = 0;

      // Wait a bit for video to be ready, then play
      const playAttempt = () => {
        const playPromise = inactiveVideo.play();
        if (playPromise !== undefined) {
          playPromise
            .then(() => {
              // Video started, fade transition
              activeVideo.classList.remove('active');
              inactiveVideo.classList.add('active');
              this.isTransitioning = false;
            })
            .catch(error => {
              console.log('Play error, retrying:', error);
              setTimeout(playAttempt, 100);
            });
        }
      };

      playAttempt();
    }
  }

  // Initialize carousel when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      new HeroVideoCarousel();
      initVolumeToggle();
    });
  } else {
    new HeroVideoCarousel();
    initVolumeToggle();
  }

  // Volume Toggle Functionality
  function initVolumeToggle() {
    const volumeToggle = document.getElementById('volumeToggle');
    if (!volumeToggle) return;

    const mutedIcon = volumeToggle.querySelector('.volume-muted');
    const unmutedIcon = volumeToggle.querySelector('.volume-unmuted');
    const heroVideos = document.querySelectorAll('.hero-video');
    
    let isMuted = true;
    let lastToggle = 0;

    function updateIcon() {
      if (!mutedIcon || !unmutedIcon) return;
      if (isMuted) {
        mutedIcon.style.display = 'block';
        unmutedIcon.style.display = 'none';
      } else {
        mutedIcon.style.display = 'none';
        unmutedIcon.style.display = 'block';
      }
    }

    function toggleVolume() {
      const now = Date.now();
      if (now - lastToggle < 250) return; // debounce double events
      lastToggle = now;
      isMuted = !isMuted;
      heroVideos.forEach(video => {
        try {
          video.muted = isMuted;
        } catch (e) {
          // ignore
        }
      });
      updateIcon();
    }

    updateIcon();

    // Use pointerdown for immediate response on touch/mouse (falls back to click)
    volumeToggle.addEventListener('pointerdown', (e) => {
      e.preventDefault();
      toggleVolume();
    }, { passive: false });

    // Also keep click for non-pointer environments
    volumeToggle.addEventListener('click', (e) => {
      e.preventDefault();
      toggleVolume();
    });
  }
</script>
