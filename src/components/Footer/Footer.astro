import { t } from '../../utils/i18n';
---

<footer class="footer">
  <div class="footer-content">
    <div class="container">
      <!-- Top Section - Main Info -->
      <div class="footer-top">
        <!-- Location -->
        <div class="footer-column">
          <h4 class="footer-column-title">
            <span class="lang-es">{t('footer.location', 'es')}</span>
            <span class="lang-en" style="display:none;">{t('footer.location', 'en')}</span>
          </h4>
          <div class="footer-info">
            <p>Madrid - EspaÃ±a</p>
            <picture>
              <source srcset="/images/logo/Logo_films_negro.webp" type="image/webp" />
              <img src="/images/logo/Logo_films_negro.png" alt="Verbena Films" class="footer-logo" />
            </picture>
          </div>
        </div>

        <!-- Navigation -->
        <div class="footer-column">
          <h4 class="footer-column-title">
            <span class="lang-es">{t('footer.navigation', 'es')}</span>
            <span class="lang-en" style="display:none;">{t('footer.navigation', 'en')}</span>
          </h4>
          <nav class="footer-nav">
            <a href="/">
              <span class="lang-es">{t('nav.home', 'es')}</span>
              <span class="lang-en" style="display:none;">{t('nav.home', 'en')}</span>
            </a>
            <a href="/films">
              <span class="lang-es">{t('nav.films', 'es')}</span>
              <span class="lang-en" style="display:none;">{t('nav.films', 'en')}</span>
            </a>
            <a href="/about">
              <span class="lang-es">{t('nav.about', 'es')}</span>
              <span class="lang-en" style="display:none;">{t('nav.about', 'en')}</span>
            </a>
            <a href="/news">
              <span class="lang-es">{t('nav.news', 'es')}</span>
              <span class="lang-en" style="display:none;">{t('nav.news', 'en')}</span>
            </a>
          </nav>
        </div>

        <!-- Contact -->
        <div class="footer-column">
          <h4 class="footer-column-title">
            <span class="lang-es">{t('footer.contact', 'es')}</span>
            <span class="lang-en" style="display:none;">{t('footer.contact', 'en')}</span>
          </h4>
          <div class="footer-contact">
            <a href="mailto:ana@verbenafilms.com">ana@verbenafilms.com</a>
          </div>
        </div>

        <!-- Social -->
        <div class="footer-column">
          <h4 class="footer-column-title">
            <span class="lang-es">{t('footer.follow', 'es')}</span>
            <span class="lang-en" style="display:none;">{t('footer.follow', 'en')}</span>
          </h4>
          <div class="footer-social">
            <a
              href="https://www.instagram.com/verbena_films/?hl=es"
              target="_blank"
              rel="noopener noreferrer"
              class="social-link"
              title="Instagram"
            >
              <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <circle cx="17.5" cy="6.5" r="1.5"></circle>
              </svg>
              <span>Instagram</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Divider -->
      <div class="footer-divider"></div>

      <!-- Bottom Section - Legal & Copyright -->
      <div class="footer-bottom">
        <div class="footer-bottom-left">
          <a href="#" class="footer-link-small">
            <span class="lang-es">{t('footer.legal', 'es')}</span>
            <span class="lang-en" style="display:none;">{t('footer.legal', 'en')}</span>
          </a>
          <a href="#" class="footer-link-small">
            <span class="lang-es">{t('footer.cookies', 'es')}</span>
            <span class="lang-en" style="display:none;">{t('footer.cookies', 'en')}</span>
          </a>
        </div>
        <div class="footer-bottom-right">
          <p class="footer-copyright">
            <span class="lang-es">{t('footer.copyright', 'es')}</span>
            <span class="lang-en" style="display:none;">{t('footer.copyright', 'en')}</span>
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(180deg, var(--color-dark-bg) 0%, var(--color-dark-secondary) 100%);
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-2xl) 0 var(--spacing-xl) 0;
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-accent),
      transparent
    );
    opacity: 0.3;
  }

  .footer-content {
    width: 100%;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);

    @media (max-width: 768px) {
      padding: 0 var(--spacing-md);
    }

    @media (max-width: 480px) {
      padding: 0 var(--spacing-sm);
    }
  }

  /* Top Section */
  .footer-top {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);

    @media (max-width: 768px) {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-xl);
    }

    @media (max-width: 480px) {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    animation: fadeInUp 0.6s ease-out;

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }

  .footer-column-title {
    font-size: 0.85rem;
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--color-text-primary);
    margin: 0;
  }

  .footer-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);

    p {
      font-size: 0.95rem;
      color: var(--color-text-secondary);
      margin: 0;
      line-height: 1.6;
      transition: color var(--transition-default);
      text-transform: uppercase;
      font-size: 0.85rem;
      letter-spacing: 0.5px;

      &:hover {
        color: var(--color-accent);
      }
    }
  }

  .footer-logo {
    width: 220px;
    height: auto;
    object-fit: contain;
    margin-top: calc(var(--spacing-md) * -0.5);
    margin-left: calc(var(--spacing-xl) * -1);
    transition: opacity var(--transition-default);
    filter: brightness(0) invert(1);

    &:hover {
      opacity: 0.8;
    }
  }

  /* Navigation Links */
  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);

    a {
      color: var(--color-text-secondary);
      text-decoration: none;
      font-size: 0.95rem;
      transition: all var(--transition-default);
      position: relative;
      width: fit-content;
      text-transform: uppercase;
      font-size: 0.85rem;
      letter-spacing: 0.5px;

      &::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 1px;
        background: var(--color-accent);
        transition: width var(--transition-default);
      }

      &:hover {
        color: var(--color-accent);

        &::after {
          width: 100%;
        }
      }
    }
  }

  /* Contact Info */
  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);

    a {
      color: var(--color-text-secondary);
      text-decoration: none;
      font-size: 0.95rem;
      transition: color var(--transition-default);
      text-transform: uppercase;
      font-size: 0.85rem;
      letter-spacing: 0.5px;

      &:hover {
        color: var(--color-accent);
      }
    }
  }

  /* Social Links */
  .footer-social {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .social-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: all var(--transition-default);
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    width: fit-content;

    svg {
      width: 24px;
      height: 24px;
      flex-shrink: 0;
    }

    span {
      font-size: 0.95rem;
    }

    &:hover {
      color: var(--color-accent);
    }
  }

      &::before {
        opacity: 1;
      }
    }
  }

  /* Divider */
  .footer-divider {
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-border),
      transparent
    );
    margin: var(--spacing-2xl) 0 var(--spacing-3xl) 0;
  }

  /* Bottom Section */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-lg);
    flex-wrap: wrap;
    margin-top: var(--spacing-2xl);

    @media (max-width: 768px) {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-md);
    }
  }

  .footer-bottom-left {
    display: flex;
    gap: var(--spacing-lg);
    align-items: center;

    @media (max-width: 768px) {
      flex-direction: column;
      gap: var(--spacing-md);
    }
  }

  .footer-link-small {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.85rem;
    transition: color var(--transition-default);

    &:hover {
      color: var(--color-accent);
    }
  }

  .footer-copyright {
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    margin: 0;
  }
</style>
