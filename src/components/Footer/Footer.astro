// Simple translation helper
const translations: Record<string, Record<string, string>> = {
  es: {
    'nav.home': 'Inicio',
    'nav.films': 'Pel铆culas',
    'nav.about': 'Nosotros',
    'nav.news': 'Noticias',
    'footer.location': 'Ubicaci贸n',
    'footer.contact': 'Contacto',
    'footer.follow': 'S铆guenos',
    'footer.legal': 'Aviso legal y Protecci贸n de Datos',
    'footer.cookies': 'Cookies',
    'footer.copyright': '漏 2025 Verbena Films. Todos los derechos reservados.',
  },
  en: {
    'nav.home': 'Home',
    'nav.films': 'Films',
    'nav.about': 'About',
    'nav.news': 'News',
    'footer.location': 'Location',
    'footer.contact': 'Contact',
    'footer.follow': 'Follow',
    'footer.legal': 'Legal Notice & Data Protection',
    'footer.cookies': 'Cookies',
    'footer.copyright': '漏 2025 Verbena Films. All rights reserved.',
  },
};

function t(key: string, lang: string = 'es'): string {
  return translations[lang]?.[key] || key;
}

interface Props {
  currentLang?: 'es' | 'en';
}

const { currentLang = 'es' } = Astro.props;
---

<footer class="footer">
  <div class="footer-content">
    <div class="container">
      <!-- Top Section - Main Info -->
      <div class="footer-top">
        <!-- Location -->
        <div class="footer-column">
          <h4 class="footer-column-title">{t('footer.location', currentLang)}</h4>
          <div class="footer-info">
            {
              currentLang === 'es' ? (
                <>
                  <p>Plaza del Cord贸n 2</p>
                  <p>28005 Madrid</p>
                  <p>Spain</p>
                </>
              ) : (
                <>
                  <p>Plaza del Cord贸n 2</p>
                  <p>28005 Madrid</p>
                  <p>Spain</p>
                </>
              )
            }
          </div>
        </div>

        <!-- Navigation -->
        <div class="footer-column">
          <h4 class="footer-column-title">{t('nav.about', currentLang)}</h4>
          <nav class="footer-nav">
            <a href="/">{t('nav.home', currentLang)}</a>
            <a href="/films">{t('nav.films', currentLang)}</a>
            <a href="/about">{t('nav.about', currentLang)}</a>
            <a href="/news">{t('nav.news', currentLang)}</a>
          </nav>
        </div>

        <!-- Contact -->
        <div class="footer-column">
          <h4 class="footer-column-title">{t('footer.contact', currentLang)}</h4>
          <div class="footer-contact">
            <a href="mailto:info@verbena-films.com">info@verbena-films.com</a>
            <a href="tel:+34123456789">+34 123 456 789</a>
          </div>
        </div>

        <!-- Social -->
        <div class="footer-column">
          <h4 class="footer-column-title">{t('footer.follow', currentLang)}</h4>
          <div class="footer-social">
            <a
              href="https://instagram.com/verbeafilms"
              target="_blank"
              rel="noopener noreferrer"
              class="social-link"
            >
              Instagram
            </a>
          </div>
        </div>
      </div>

      <!-- Divider -->
      <div class="footer-divider"></div>

      <!-- Bottom Section - Legal & Copyright -->
      <div class="footer-bottom">
        <div class="footer-bottom-left">
          <a href="#" class="footer-link-small">{t('footer.legal', currentLang)}</a>
          <a href="#" class="footer-link-small">{t('footer.cookies', currentLang)}</a>
        </div>
        <div class="footer-bottom-right">
          <p class="footer-copyright">
            {t('footer.copyright', currentLang)}
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(180deg, var(--color-dark-bg) 0%, var(--color-dark-secondary) 100%);
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-2xl) 0 var(--spacing-xl) 0;
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-accent),
      transparent
    );
    opacity: 0.3;
  }

  .footer-content {
    width: 100%;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);

    @media (max-width: 768px) {
      padding: 0 var(--spacing-md);
    }

    @media (max-width: 480px) {
      padding: 0 var(--spacing-sm);
    }
  }

  /* Top Section */
  .footer-top {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);

    @media (max-width: 768px) {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-xl);
    }

    @media (max-width: 480px) {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    animation: fadeInUp 0.6s ease-out;

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }

  .footer-column-title {
    font-size: 0.85rem;
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--color-text-primary);
    margin: 0;
  }

  .footer-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);

    p {
      font-size: 0.95rem;
      color: var(--color-text-secondary);
      margin: 0;
      line-height: 1.6;
      transition: color var(--transition-default);

      &:hover {
        color: var(--color-accent);
      }
    }
  }

  /* Navigation Links */
  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);

    a {
      color: var(--color-text-secondary);
      text-decoration: none;
      font-size: 0.95rem;
      transition: all var(--transition-default);
      position: relative;
      width: fit-content;

      &::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 1px;
        background: var(--color-accent);
        transition: width var(--transition-default);
      }

      &:hover {
        color: var(--color-accent);

        &::after {
          width: 100%;
        }
      }
    }
  }

  /* Contact Info */
  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);

    a {
      color: var(--color-text-secondary);
      text-decoration: none;
      font-size: 0.95rem;
      transition: color var(--transition-default);

      &:hover {
        color: var(--color-accent);
      }
    }
  }

  /* Social Links */
  .footer-social {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .social-link {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.95rem;
    transition: all var(--transition-default);
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    width: fit-content;

    &::before {
      content: '';
      opacity: 0;
      transition: opacity var(--transition-default);
    }

    &:hover {
      color: var(--color-accent);

      &::before {
        opacity: 1;
      }
    }
  }

  /* Divider */
  .footer-divider {
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-border),
      transparent
    );
    margin: var(--spacing-2xl) 0;
  }

  /* Bottom Section */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--spacing-lg);
    flex-wrap: wrap;

    @media (max-width: 768px) {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-md);
    }
  }

  .footer-bottom-left {
    display: flex;
    gap: var(--spacing-lg);
    align-items: center;

    @media (max-width: 768px) {
      flex-direction: column;
      gap: var(--spacing-md);
    }
  }

  .footer-link-small {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.85rem;
    transition: color var(--transition-default);

    &:hover {
      color: var(--color-accent);
    }
  }

  .footer-copyright {
    color: var(--color-text-secondary);
    font-size: 0.85rem;
    margin: 0;
  }
</style>
